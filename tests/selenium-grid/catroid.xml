<suite name="Catroid Test Suite" parallel="methods" thread-count="20" verbose="1" allow-return-values="true">
  <test name="ApiTests" >
    <packages>
      <package name="at.tugraz.ist.catroweb.api" />
    </packages>
  </test>
  <test name="AdminTests" >
    <packages>
      <package name="at.tugraz.ist.catroweb.admin" />
    </packages>
  </test>
  <test name="CatroidTests" >
    <classes>
      <class name="at.tugraz.ist.catroweb.catroid.DetailsTests" />
      <class name="at.tugraz.ist.catroweb.catroid.HeaderTests" />
      <class name="at.tugraz.ist.catroweb.catroid.IndexTests" />      
      <class name="at.tugraz.ist.catroweb.catroid.LicenseTests" />
      <class name="at.tugraz.ist.catroweb.catroid.LoginTests" />
      <class name="at.tugraz.ist.catroweb.catroid.PasswordRecoveryTests" />
      <class name="at.tugraz.ist.catroweb.catroid.ProfileTests" />
      <class name="at.tugraz.ist.catroweb.catroid.RegistrationTests" />
      <class name="at.tugraz.ist.catroweb.catroid.ReportAsInappropriateTests" />
      <class name="at.tugraz.ist.catroweb.catroid.SearchTests" />
      <class name="at.tugraz.ist.catroweb.catroid.WebsiteTitleTests" />
    </classes>
  </test>
  <test name="BlockedIpTests" >
    <classes>
      <class name="at.tugraz.ist.catroweb.catroid.BlockedIpTests" />
    </classes>
  </test>
</suite>
